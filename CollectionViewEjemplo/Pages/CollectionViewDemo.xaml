<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionViewEjemplo.Pages.CollectionViewDemo"
             Title="Galería de Coches"
             BackgroundColor="#F5F5F5">
    <Grid RowDefinitions="Auto, *">

        <Border Grid.Row="0" 
                Margin="15,10" 
                Padding="0" 
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0"
                BackgroundColor="White">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,2" Radius="5" Opacity="0.1"/>
            </Border.Shadow>

            <Picker x:Name="filterPicker" 
                    Title="Filtrar por región"
                    TitleColor="#666"
                    TextColor="#333"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    SelectedIndexChanged="OnFilterChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Todos</x:String>
                        <x:String>Europeos</x:String>
                        <x:String>Asiáticos</x:String>
                        <x:String>Otros</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </Border>

        <CollectionView x:Name="collectionView" 
                        Grid.Row="1"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged"
                        Margin="10">

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" 
                                 Span="2" 
                                 VerticalItemSpacing="10" 
                                 HorizontalItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeShape="RoundRectangle 15"
                            StrokeThickness="0"
                            BackgroundColor="White"
                            HeightRequest="220">

                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="2,2" Radius="5" Opacity="0.1"/>
                        </Border.Shadow>

                        <Grid RowDefinitions="120, *">

                            <Image Grid.Row="0"
                                   Source="{Binding cocheUrl}"
                                   Aspect="AspectFill"
                                   HeightRequest="120"
                                   WidthRequest="200" />

                            <VerticalStackLayout Grid.Row="1" 
                                                 Padding="10" 
                                                 Spacing="2"
                                                 VerticalOptions="Center">

                                <Label Text="{Binding nombreCoche}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="#333"/>

                                <Label Text="{Binding marcaCoche}" 
                                       FontSize="12" 
                                       TextColor="#666" 
                                       TextTransform="Uppercase"
                                       FontAttributes="Bold"/>

                                <Border BackgroundColor="#E0F7FA" 
                                        StrokeShape="RoundRectangle 5" 
                                        HorizontalOptions="Start"
                                        Padding="6,2"
                                        Margin="0,4,0,0"
                                        StrokeThickness="0">
                                    <Label Text="{Binding Origen}" 
                                           TextColor="#006064"
                                           FontSize="10"
                                           FontAttributes="Bold"/>
                                </Border>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>